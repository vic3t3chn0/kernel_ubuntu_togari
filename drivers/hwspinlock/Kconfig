# HWSPINLOCK always gets selected by whoever wants it.
config HWSPINLOCK
	tristate

menu "Hardware Spinlock drivers"

config HWSPINLOCK_OMAP
	tristate "OMAP Hardware Spinlock device"
	depends on ARCH_OMAP4
	select HWSPINLOCK
